<!DOCTYPE html>
<html>

<head>  
  <title>Carta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/menu.css">
  <link rel="stylesheet" href="/stylesheets/nav.css" type="text/css" media=screen>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog=="
    crossorigin="anonymous" />
</head>


<body>

  <main>
    <%- include("partials/nav") %>
    <p id="title">Nuestra carta</p>
    <div id="secciones">
      <a href="/menu/cocktails/clasicos" class="selector">
        LOS CLASICOS
      </a>
      <a href="/menu/cocktails/nuestros" class="selector">
        LOS NUESTROS
      </a>
    </div>
    <div class="grid">
      <% for (var i = 0; i < resultado.length; i++) { %>
      <div class="shape">
        <a href="/menu/cocktail/<%=resultado[i].id%>" style="width: 100%;
          height: 52vh;">
          <img src="/images/<%=resultado[i].image%>" class="prod-img" style="height: 52vh;"></a>
        <div class=tag style="height: 50vh;">
          <p class="trago"><%=resultado[i].drink%> </p>
          <div class="counter">
            
            <p>Descripci√≥n:</p>
           <p style="width: 70%;
           text-align: center;"><%= resultado[i].description %> </p>
          </div>
         
        </div>
      </div>
      <% } %>
    </div>

  </main>
  

</body>
  
</html>